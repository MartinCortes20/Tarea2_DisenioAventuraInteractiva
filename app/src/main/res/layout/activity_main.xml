<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="🌌 Sistema Solar"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"/>

    <!-- Subtítulo con tu nombre -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:text="Martin Cortes"
        android:textSize="18sp"
        android:textColor="@color/purple_200"
        android:layout_marginTop="8dp"/>

    <!-- CONTENEDOR PRINCIPAL PARA CENTRAR -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubtitle"
        android:layout_marginTop="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <!-- FILA 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Tierra -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌍"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tierra"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Planeta azul"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"/>
                </LinearLayout>

                <!-- Marte -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔴"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marte"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Planeta rojo"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"/>
                </LinearLayout>
            </LinearLayout>

            <!-- FILA 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Júpiter -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🪐"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Júpiter"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gigante gaseoso"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"/>
                </LinearLayout>

                <!-- Saturno -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🪐"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturno"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anillos espectaculares"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"
                        android:maxLines="2"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- FILA 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Neptuno -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔵"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neptuno"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gigante de hielo"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"/>
                </LinearLayout>

                <!-- Venus -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/planet_card_bg"
                    android:padding="16dp"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🟠"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venus"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Planeta infernal"
                        android:textSize="12sp"
                        android:textColor="@color/purple_200"
                        android:layout_marginTop="4px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Puntos de interés decorativos -->
    <ImageView
        android:id="@+id/pointInterest1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:contentDescription="Estrella fugaz"
        app:tint="@color/white"
        android:src="@android:drawable/btn_star_big_on"/>

    <ImageView
        android:id="@+id/pointInterest2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:contentDescription="Satélite"
        app:tint="@color/white"
        android:src="@android:drawable/ic_menu_compass"/>

    <ImageView
        android:id="@+id/pointInterest3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:contentDescription="Cometa"
        app:tint="@color/white"
        android:src="@android:drawable/arrow_down_float"/>

</RelativeLayout>