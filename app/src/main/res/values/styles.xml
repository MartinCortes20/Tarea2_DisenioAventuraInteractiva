<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Space Theme -->
    <style name="SpaceTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/space_black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Info Text Style -->
    <style name="InfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Planet Button Style -->
    <style name="PlanetButtonStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Interest Button Style -->
    <style name="InterestButtonStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>