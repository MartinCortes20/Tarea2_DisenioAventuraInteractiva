<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000014">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌌 SISTEMA SOLAR"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explora los planetas de nuestro sistema solar"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <Button
                android:id="@+id/btn_earth"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="🌍\nTIERRA"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/planet_button_earth"
                android:layout_margin="8dp"
                android:elevation="8dp" />

            <Button
                android:id="@+id/btn_mars"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="🔴\nMARTE"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/planet_button_mars"
                android:layout_margin="8dp"
                android:elevation="8dp" />

            <Button
                android:id="@+id/btn_jupiter"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="🟠\nJÚPITER"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/planet_button_jupiter"
                android:layout_margin="8dp"
                android:elevation="8dp" />

            <Button
                android:id="@+id/btn_saturn"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="🪐\nSATURNO"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/planet_button_saturn"
                android:layout_margin="8dp"
                android:elevation="8dp" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca un planeta para comenzar tu exploración"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="30dp" />

    </LinearLayout>
</ScrollView>
